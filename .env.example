# Citrix Monitor MCP Configuration
# Copy this file to .env and fill in your values

# Deployment type: "cloud" or "onprem"
CITRIX_DEPLOYMENT=cloud

# ============================================
# Cloud settings (Citrix DaaS)
# ============================================
CITRIX_CUSTOMER_ID=your-customer-id
CITRIX_CLIENT_ID=your-client-id
CITRIX_CLIENT_SECRET=your-client-secret
# Region: us, eu, ap-s, jp
CITRIX_REGION=us

# ============================================
# On-premises settings (Citrix CVAD)
# ============================================
# Delivery Controller URL (include https://)
CITRIX_DDC_HOST=https://ddc.example.com
# Windows domain for NTLM auth
CITRIX_DOMAIN=DOMAIN
CITRIX_USERNAME=admin
CITRIX_PASSWORD=your-password

# ============================================
# Optional settings
# ============================================
# Skip SSL verification (not recommended for production)
CITRIX_VERIFY_SSL=true
